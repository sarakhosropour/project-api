{
  "compilerOptions": {
    "target": "ES2022",
    "jsx": "react-jsx",
    "module": "ES2022",
    "outDir": "./dist",
    "declaration": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },

  "exclude": ["node_modules"]
}
