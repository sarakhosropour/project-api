{
  "name": "project-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "clean": "npx rimraf dist",
    "clean:production": "npx rimraf build",
    "build:production": "npm run clean:production && tsc --build ./production.tsconfig.json && cp .env build/.env && cp -r src/templates build/src",
    "dev": "nodemon --watch './**/*.ts' --exec \"node --experimental-specifier-resolution=node --loader ts-node/esm\" src/index.ts",
    "start": "npx tsx src/index.ts",
    "start:production": "node --experimental-specifier-resolution=node --loader ts-node/esm build/src/index.js",
    "test": "vitest --no-file-parallelism",
    "coverage": "vitest run --coverage --no-file-parallelism"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^24.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@sarakhosropour/framework-api": "^1.0.2",
    "tsx": "^4.20.4",
    "vite": "^7.1.3"
  }
}
